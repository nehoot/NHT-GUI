-- ========== ACCORDION SLIDER SECTION ==========
local SLIDER_PANEL_H_OPEN = 216  -- 6 sliders * 36px each
local sliderPanelOpen = false

-- Accordion toggle button
local accordionBtn = Instance.new("TextButton")
accordionBtn.Size = UDim2.new(1, -16, 0, 34)
accordionBtn.Position = UDim2.new(0, 8, 0, 48)
accordionBtn.BackgroundColor3 = Color3.fromRGB(22, 22, 32)
accordionBtn.TextColor3 = Color3.fromRGB(255, 200, 0)
